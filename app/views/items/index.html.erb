<div class="jumbotron">
<p id="notice"><%= notice %></p>

<h2>Items</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Item code</th>
      <th>Item name</th>
      <th>Unit price</th>
      <th width="30%"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.item_code %></td>
        <td><%= item.item_name %></td>
        <td><%= item.unit_price %></td>
        <td><%= link_to 'Show', item, class: 'btn btn-mini btn-success' %>
            <%= link_to 'Edit', edit_item_path(item), class: 'btn btn-mini btn-warning' %>
            <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path, class: 'btn btn-mini btn-info' %>
</div>