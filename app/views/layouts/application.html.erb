<html>
  <head>
    <title>Trashbox</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav class="navbar navbar navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Trashbox</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li>
              <a><%= "Signed in as   " + current_user.email if user_signed_in? %></a>

            </li>
            <li>
              <a href="<%= edit_user_registration_path(current_user) %>">Settings</a>
            </li>
            <li>
              <a href="">Profile</a>
            </li>
            <li>
              <a href="">Help</a>
            </li>
            <li>
                              <%= link_to 'Sign Out', destroy_user_session_path, :method => "delete"  if user_signed_in? %>
                        </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container-fluid">
      <div class="row">
        <% if user_signed_in? %>
          <div class="col-sm-3 col-md-2 sidebar">
            <ul class="nav nav-sidebar">
              <% if user_signed_in? %>
                <li>
                  <%= link_to 'Items', items_path, method: :get %>
                </li>
                <li>
                  <%= link_to 'Trash Requests', trash_requests_path, method: :get %>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
          <%= content_tag(:div, flash[:error], :class => ["alert", "alert-danger"], :id => "flash_error") if flash[:error] %>
                <%= content_tag(:div, flash[:notice], :class => ["alert", "alert-success"], :id => "flash_notice") if flash[:notice] %>
                <%= content_tag(:div, flash[:alert], :class => ["alert", "alert-warning"], :id => "flash_alert") if flash[:alert] %>
          <%= yield %>
        </div>
      </div>
    </div>

  </body>
</html>
